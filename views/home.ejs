  <script>
  document.addEventListener('DOMContentLoaded', function() {
      // Função para lidar com a seleção dos filtros
      function handleFilterSelection(filterId, inputId) {
          const filter = document.getElementById(filterId);
          const input = document.getElementById(inputId);
          const dropdown = filter.querySelector('.dropdown');
          const items = dropdown.querySelectorAll('li');

          items.forEach(item => {
              item.addEventListener('click', function() {
                  const value = this.getAttribute('data-value');
                  input.value = value;
                  filter.querySelector('span:first-child').textContent = this.textContent;
                  dropdown.style.display = 'none';
              });
          });

          // Toggle dropdown on click
          filter.addEventListener('click', function(e) {
              e.stopPropagation();
              dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
          });

          // Close dropdown when clicking outside
          document.addEventListener('click', function() {
              dropdown.style.display = 'none';
          });
      }

      // Inicializar os filtros
      handleFilterSelection('filter-tipo', 'tipoContrato');
      handleFilterSelection('filter-local', 'uf');
      handleFilterSelection('filter-educacao', 'escolaridade');
  });
  </script>

