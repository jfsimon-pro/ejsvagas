<%- include('./header') %>
    <style>
        .editar-dados {
            margin-bottom: 12px;
        }

        .vagas-disponiveis h2 {
            color: white;
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .vagas-disponiveis input {
            width: 80%;
            padding: 10px;
        }

        .vagas-disponiveis button {
            background: #F78E0F;
            color: white;
            border: none;
            font-size: 16px;
            padding: 10px 20px;
        }

        .pagination {
            display: flex;
            text-align: center;
            width: 100%;
            align-items: center;
            justify-content: center;
            gap: 20px;
        }

        .listavagas {
            background: white;
            padding: 20px;
            display: flex;
            gap: 50px;
            justify-content: space-between;
            flex-direction: column;
        }

        .listavagas h3 {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .listavagas strong {
            font-weight: bold;
        }

        .listavagas li p {
            margin-bottom: 7px;
        }

        .vagas-candidatadas h2 {
            color: white;
            font-weight: bold;
            font-size: 30px;
            margin-bottom: 25px;
        }

        .vagas-candidatadas li {
            background: white;
            padding: 20px;
        }

        .vagas-candidatadas ul {
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        .vagas-candidatadas h3 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 12px;
        }

        .vagas-candidatadas strong {
            font-weight: bold;
        }

        .vagas-candidatadas p {
            margin-bottom: 10px;
        }

        .vagas-aprovadas li {
            background-color: white;
            padding: 20px;
        }

        .vagas-aprovadas h2 {
            color: white;
            font-weight: bold;
            font-size: 30px;
            margin-bottom: 25px;
            margin-top: 50px;
        }

        .vagas-aprovadas h3 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 12px;
        }

        .vagas-aprovadas p {
            margin-bottom: 10px;
        }

        .vagas-aprovadas strong {
            font-weight: bold;
        }

        .vagas-aprovadas a {
            color: black;
        }

        .status-candidatura {
            margin: 15px 0;
        }
        
        .status {
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        
        .status.aprovado {
            background-color: #28a745;
            color: white;
        }
        
        .status.em-analise {
            background-color: #ffc107;
            color: #000;
        }
        
        .status i {
            font-size: 16px;
        }
    </style>
    <section class="candidato-superior">
        <div class="main-dashboard-candidato">
            
            <div class="vagas-candidatadas">
                <h2>Vagas Candidatadas</h2>
                <div class="vagas-container">
                    <% if (vagasCandidatadas.length > 0) { %>
                        <% vagasCandidatadas.forEach(vaga => { %>
                            <div class="vaga-card">
                                <h3><%= vaga.titulo %></h3>
                                <p><strong>Faixa Salarial:</strong> <%= vaga.faixaSalarial %></p>
                                <p><strong>Tipo de Contrato:</strong> <%= vaga.tipoContrato %></p>
                                <div class="status-candidatura">
                                    <% if (vaga.selecionado) { %>
                                        <span class="status aprovado">
                                            <i class="fas fa-check-circle"></i> Aprovado
                                        </span>
                                    <% } else { %>
                                        <span class="status em-analise">
                                            <i class="fas fa-clock"></i> Em Análise
                                        </span>
                                    <% } %>
                                </div>
                                <a href="/candidato/vagas/<%= vaga.id %>/detalhes" class="btn btn-primary">Ver Detalhes</a>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>Você ainda não se candidatou a nenhuma vaga.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </section>
<%- include('../partials/footer') %>