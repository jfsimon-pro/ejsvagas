<%- include('./header') %>
  <style>
    .editar-dados {
      margin-bottom: 12px;
    }

    .vagas-disponiveis h2 {
      color: white;
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 15px;
    }

    .vagas-disponiveis input {
      width: 80%;
      padding: 10px;
    }

    .vagas-disponiveis button {
      background: #F78E0F;
      color: white;
      border: none;
      font-size: 16px;
      padding: 10px 20px;
    }

    .pagination {
      display: flex;
      text-align: center;
      width: 100%;
      align-items: center;
      justify-content: center;
      gap: 20px;
    }

    .listavagas {
      background: white;
      padding: 20px;
      display: flex;
      gap: 50px;
      justify-content: space-between;
      flex-direction: column;
    }

    .listavagas h3 {
      font-weight: bold;
      font-size: 18px;
      margin-bottom: 10px;
    }

    .listavagas strong {
      font-weight: bold;
    }

    .listavagas li p {
      margin-bottom: 7px;
    }

    .vagas-candidatadas h2 {
      color: white;
      font-weight: bold;
      font-size: 30px;
      margin-bottom: 25px;
    }

    .vagas-candidatadas li {
      background: white;
      padding: 20px;
    }

    .vagas-candidatadas ul {
      display: flex;
      flex-direction: column;
      gap: 25px;
    }

    .vagas-candidatadas h3 {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 12px;
    }

    .vagas-candidatadas strong {
      font-weight: bold;
    }

    .vagas-candidatadas p {
      margin-bottom: 10px;
    }

    .vagas-aprovadas li {
      background-color: white;
      padding: 20px;
    }

    .vagas-aprovadas h2 {
      color: white;
      font-weight: bold;
      font-size: 30px;
      margin-bottom: 25px;
      margin-top: 50px;
    }

    .vagas-aprovadas h3 {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 12px;
    }

    .vagas-aprovadas p {
      margin-bottom: 10px;
    }

    .vagas-aprovadas strong {
      font-weight: bold;
    }

    .vagas-aprovadas a {
      color: black;
    }

    .lancar-cursos {
      margin: 35px 0px;

    }

    .lancar-cursos a,
    .vagas-aprovadas a {
      background: #F78E0F;
      color: white;
      border: none;
      font-size: 16px;
      padding: 10px 20px;
      text-decoration: none;
    }

    .dashboard-buttons a {
      background-color: #F7AD0F;
      color: white;
      border: none;
      font-size: 16px;
      padding: 10px 20px;
      text-decoration: none;
    }

    .buttons-aprovado {
      margin-top: 25px;
    }

    .vagas-aprovadas ul p {
      color: black;
    }

    .buttons-aprovado {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .action-buttons {
      display: flex;
      gap: 10px;
      margin: 20px 0;
    }

    .action-buttons .btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: 500;
    }

    .action-buttons .btn-primary {
      background-color: #007bff;
      color: white;
      border: none;
    }

    .action-buttons .btn-primary:hover {
      background-color: #0056b3;
      text-decoration: none;
    }

    @media (max-width: 980px) {

      .lancar-cursos,
      .dashboard-buttons {
        flex-wrap: wrap;
        display: flex;
        gap: 20px;
        flex-direction: column;
        max-width: 200px;
        text-align: center;
      }
    }
  </style>
  <style>
    .degrade-header {
      background: linear-gradient(to top right, #0d0b0a, #2c1b17, #5a1e12);
      height: 350px;
      width: 100%;
      border-radius: 0px 0px 77px 77px;
      display: flex;
      justify-content: center;
      align-items: center;
  }
  .content-degrade-header {
      max-width: 1200px;
      padding: 180px 50px;
      width: 100%;
  }
  .linha-branca {
      height: 1px;
      width: 100%;
      background-color: white;
      margin-bottom: 20px;
  }
  .degrade-breadcrumb {
      display: flex;
      justify-content: space-between;
      align-items: center;
  }
  .degrade-breadcrumb h1 {
      color: white;
      font-size: 47px;
      font-weight: 300;
  }
  .links-bread a {
      text-decoration: none;
      color: white;
      font-size: 16px;
  }
  .links-bread span {
      color: #FF5E00;
  }
  </style>
  <div class="degrade-header">
    <div class="content-degrade-header">
      <div class="linha-branca"></div>
      <div class="degrade-breadcrumb">
        <div class="links-bread">
          <a href="">Início</a> <span>/</span> <a href="">Sobre</a>
        </div>
        <h1>Sobre nós</h1>
      </div>
    </div>
  </div>
  <section class="candidato-superior">
    <div class="main-dashboard-candidato">

      <div class="lancar-cursos">
        <a href="/candidato/lancar-experiencia">Lançar Experiência</a>
        <a href="/candidato/lancar-curso">Lançar Curso</a>
        <a href="/candidato/metas" class="btn-minhas-metas">Minhas Metas</a>
      </div>

      <div class="cabecalho-candidato">
        <h1>Bem-vindo, <%= candidato.nomeCompleto %>!</h1>
      </div>
      <div class="meus-dados">
        <div class="editar-dados">
          <a href="/candidato/editar-dados">Editar Meus Dados</a>
        </div>

        <p><strong>CPF:</strong>
          <%= candidato.cpf %>
        </p>
        <p><strong>E-mail:</strong>
          <%= candidato.email %>
        </p>
        <p><strong>Telefone:</strong>
          <%= candidato.telefone %>
        </p>
        <p><strong>Endereço:</strong>
          <%= candidato.logradouro %>, <%= candidato.complemento %>, <%= candidato.numero %>, <%= candidato.bairro %> -
                  <%= candidato.cep %>, <%= candidato.cidade %> / <%= candidato.uf %>
        </p>

        
        
      </div>


      <div class="vagas-aprovadas">
        <h2>Vagas em que você foi aprovado</h2>
        <% if (vagasAprovadas.length> 0) { %>
          <ul>
            <% vagasAprovadas.forEach(vaga=> { %>
              <li>
                <h3>
                  <%= vaga.titulo %>
                </h3>
                <p><strong>Faixa Salarial:</strong>
                  <%= vaga.faixaSalarial %>
                </p>
                <p><strong>Empresa:</strong>
                  <%= vaga.empresa.nomeFantasia %>
                </p>
                <div class="buttons-aprovado">
                  <a href="/empresa/perfil/<%= vaga.empresa.id %>" class="btn btn-info">perfil da empresa</a>
                  <% if (vaga.jaAvaliada) { %>
                    <button disabled class="btn btn-secondary">Avaliação enviada</button>
                    <% } else { %>
                      <a href="/candidato/vagas/<%= vaga.id %>/avaliar" class="btn btn-success">Avaliar Empresa</a>
                      <% } %>
                </div>
              </li>
              <% }); %>
          </ul>
          <% } else { %>
            <p>Você ainda não foi aprovado em nenhuma vaga.</p>
            <% } %>
      </div>

    </div>
  </section>

  <%- include('../partials/footer') %>