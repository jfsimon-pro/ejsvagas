            <option value="Ensino superior completo" <%= candidato.escolaridade === 'Ensino superior completo' ? 'selected' : '' %>>Ensino superior completo</option>
            <option value="Pós graduação incompleta" <%= candidato.escolaridade === 'Pós graduação incompleta' ? 'selected' : '' %>>Pós-graduação incompleta</option>
            <option value="Pós graduação completa" <%= candidato.escolaridade === 'Pós graduação completa' ? 'selected' : '' %>>Pós-graduação completa</option>
