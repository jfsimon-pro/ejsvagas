              <div class="radio-item">
                <input 
                  type="radio" 
                  id="pcd-sim" 
                  name="pcd" 
                  value="Sim"
                  <%= candidato.pcd === 'Sim' ? 'checked' : '' %>
                >
                <label for="pcd-sim">Sim</label>
              </div>
              <div class="radio-item">
                <input 
                  type="radio" 
                  id="pcd-nao" 
                  name="pcd" 
                  value="Não"
                  <%= candidato.pcd === 'Não' ? 'checked' : '' %>
                >
                <label for="pcd-nao">Não</label>
              </div>
            </div>
          </div>
      
          <div class="form-group">
            <label>Minha CNH:</label>
            <div class="checkbox-group cnh-group">
              <div class="radio-item">
                <input 
                  type="checkbox" 
                  id="cnh-nao" 
                  name="cnh[]" 
                  value="Não tenho"
                  <%= !candidato.cnh || candidato.cnh.includes('Não tenho') ? 'checked' : '' %>
                >
                <label for="cnh-nao">Não tenho</label>
              </div>
              <div class="radio-item">
                <input 
                  type="checkbox" 
                  id="cnh-a" 
                  name="cnh[]" 
                  value="A"
                  <%= candidato.cnh && candidato.cnh.includes('A') ? 'checked' : '' %>
                >
                <label for="cnh-a">A</label>
              </div>
              <div class="radio-item">
                <input 
                  type="checkbox" 
                  id="cnh-b" 
                  name="cnh[]" 
                  value="B"
                  <%= candidato.cnh && candidato.cnh.includes('B') ? 'checked' : '' %>
                >
                <label for="cnh-b">B</label>
              </div>
              <div class="radio-item">
                <input 
                  type="checkbox" 
                  id="cnh-c" 
                  name="cnh[]" 
                  value="C"
                  <%= candidato.cnh && candidato.cnh.includes('C') ? 'checked' : '' %>
                >
                <label for="cnh-c">C</label>
              </div>
              <div class="radio-item">
                <input 
                  type="checkbox" 
                  id="cnh-d" 
                  name="cnh[]" 
                  value="D"
                  <%= candidato.cnh && candidato.cnh.includes('D') ? 'checked' : '' %>
                >
                <label for="cnh-d">D</label>
              </div>
              <div class="radio-item">
                <input 
                  type="checkbox" 
                  id="cnh-e" 
                  name="cnh[]" 
                  value="E"
                  <%= candidato.cnh && candidato.cnh.includes('E') ? 'checked' : '' %>
                >
                <label for="cnh-e">E</label>
              </div>
            </div>
          </div>
      
          <button type="submit">Salvar Alterações</button>
        </form>

       
      </div>

      <div class="dashboard-actions">
        <a href="/candidato/vagas">Vagas Disponíveis</a>
        <a href="/candidato/vagas-candidatadas">Minhas Candidaturas</a>
        <a href="/candidato/vagas-aprovadas">Vagas Aprovadas</a>
        <a href="/candidato/meu-perfil">Ver sobre mim</a>
      </div>
    </div>
  </section>
  <script>
    // Lógica para os checkboxes de CNH
    document.addEventListener('DOMContentLoaded', function() {
      const cnhOptions = document.querySelectorAll('input[name="cnh[]"]:not(#cnh-nao)');
      const cnhNao = document.querySelector('#cnh-nao');
  
      // Quando "Não tenho" é marcado, desmarca as outras opções
      cnhNao.addEventListener('change', function() {
        if (this.checked) {
          cnhOptions.forEach(option => {
            option.checked = false;
          });
        }
      });
  
      // Quando qualquer outra opção é marcada, desmarca "Não tenho"
      cnhOptions.forEach(option => {
        option.addEventListener('change', function() {
          if (this.checked) {
            cnhNao.checked = false;
          }
        });
      });
    });
  </script>
