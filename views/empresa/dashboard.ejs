<section class="candidato-superior-novo">
  <div class="main-dashboard-candidato-novo">
    <div class="lancar-cursos-novo">
      <a href="/empresa/dashboard" class="vigente">Meus Dados</a>
      <a href="/empresa/vagas/criar">Criar Vaga</a>
      <a href="/empresa/vagas" class="btn-minhas-metas">Minhas Vagas</a>
    </div>

    <div class="cabecalho-candidato-novo">
      <p>Seus Dados</p>
    </div>
    <div class="meus-dados-novo">
      <h1>Bem-vindo, <%= empresa.nomeFantasia %>!</h1>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message">
          <%= error %>
        </div>
      <% } %>

      <% if (typeof success !== 'undefined' && success) { %>
        <div class="success-message">
          <%= success %>
        </div>
      <% } %>

      <div class="seus-dados">
        <% if (empresa.logo) { %>
          <img src="/<%= empresa.logo %>" alt="Logo da empresa" style="max-width: 400px; max-height: 400px;">
        <% } else { %>
          <p>Sem logo disponível</p>
        <% } %>
        
        <div class="campo-dados">
          <label>Razão Social:</label> <input readonly value="<%= empresa.razaoSocial %>"></input>
        </div>
        <div class="campo-dados">
          <label>CNPJ:</label> <input readonly value="<%= empresa.cnpj %>"></input> 
        </div>
        <div class="campo-dados">
          <label>Telefone:</label> <input readonly value="<%= empresa.telefone %>"></input>
        </div>
        <div class="campo-dados">
          <label>Whatsapp:</label> <input readonly value="<%= empresa.whatsapp %>"></input>
        </div>
        <div class="campo-dados">
          <label>Endereço:</label> <input readonly value="<%= empresa.logradouro %>, <%= empresa.numero %>, <%= empresa.bairro %>, <%= empresa.cidade %> - <%= empresa.uf %>"></input>
        </div>

        <% if (empresa.sobre) { %>
          <div class="campo-dados">
            <label>Sobre:</label> <input readonly value="<%= empresa.sobre %>"></input>
          </div>
        <% } %>
        <div class="linha"></div>
        <h2>Dados Oficiais de Registro da sua empresa</h2><br>
        <form action="/empresa/editar" method="POST">
          <div class="conteudo-form">
            <div class="campo-dados">
              <label>Telefone:</label>
              <input type="text" name="telefone" value="<%= empresa.telefone %>" required>
            </div>    
            <div class="campo-dados">
              <label>Whatsapp:</label>
              <input type="text" name="whatsapp" value="<%= empresa.whatsapp %>" required>
            </div>
            <div class="campo-dados">
              <label>Responsável:</label>
              <input type="text" name="responsavel" value="<%= empresa.responsavel %>" required>
            </div>    
            <div class="campo-dados">
              <label>E-mail:</label>
              <input type="email" name="email" value="<%= empresa.email %>" required>
            </div>
          </div>
          <div class="alinha-submit">
            <button type="submit">Salvar Alterações</button>
          </div>
          
        </form>

        <div class="linha"></div>
        <h2>Perfil Social da Empresa</h2><br>
        <form action="/empresa/editar-perfil" method="POST" enctype="multipart/form-data">
          <div class="conteudo-form">
            <div class="campo-dados">
              <label for="logo">Logo da Empresa</label>
              <input type="file" id="logo" name="logo" accept="image/*">
              <% if (empresa.logo) { %>
                <img src="/<%= empresa.logo %>" alt="Logo atual" style="max-width: 200px; margin-top: 10px;">
              <% } %>
            </div>
            <div class="campo-dados">
              <label for="sobre">Sobre a Empresa</label>
              <textarea id="sobre" name="sobre" rows="4"><%= empresa.sobre || '' %></textarea>
            </div>
            <div class="campo-dados">
              <label for="twitter">Twitter:</label>
              <input
                type="url"
                id="twitter"
                name="twitter"
                placeholder="URL do Twitter ou X"
                pattern="https?://(www\.)?(twitter\.com|x\.com)/.+"
                title="A URL deve ser do Twitter (https://twitter.com) ou X (https://x.com)."
                value="<%= empresa.twitter || '' %>"
              >
            </div>
            <div class="campo-dados">
              <label for="instagram">Instagram:</label>
              <input
                type="url"
                id="instagram"
                name="instagram"
                placeholder="URL do Instagram"
                pattern="https?://(www\.)?instagram\.com/.+"
                title="A URL deve ser do Instagram (https://instagram.com)."
                value="<%= empresa.instagram || '' %>"
              >
            </div>
            <div class="campo-dados">
              <label for="facebook">Facebook:</label>
              <input
                type="url"
                id="facebook"
                name="facebook"
                placeholder="URL do Facebook"
                pattern="https?://(www\.)?facebook\.com/.+"
                title="A URL deve ser do Facebook (https://facebook.com)."
                value="<%= empresa.facebook || '' %>"
              >
            </div>
            <div class="campo-dados">
              <label for="linkedin">LinkedIn:</label>
              <input
                type="url"
                id="linkedin"
                name="linkedin"
                placeholder="URL do LinkedIn"
                pattern="https?://(www\.)?linkedin\.com/.+"
                title="A URL deve ser do LinkedIn (https://linkedin.com)."
                value="<%= empresa.linkedin || '' %>"
              >
            </div>
          </div>
          <div class="alinha-submit">
            <button type="submit">Salvar Perfil Social</button>
          </div>
        </form>
      </div>

      

    </div>
  </div>
</section>
