<%- include('./header') %>
  <style>
    .content-main-login {
      background: white;
      max-width: 90vw;
      width: 100%;
    }

    .candidatos-container h1 {
      color: black;
    }

    .candidatos-container {
      width: 100%;
    }

    .candidatos-container form {
      margin-bottom: 20px;
      display: flex;
      flex-direction: column;
      width: 100%;
    }

    .candidatos-container form input {
      width: 95%;
    }

    .candidatos-container form button {
      width: 15%;
    }

    .candidatos-container table {
      width: 100%;
    }

    .candidatos-container th {
      text-align: left;
      font-size: 18px;
      font-weight: bold;
    }

    .candidatos-container th,
    .candidatos-container td {
      padding: 20px;
    }

    .candidatos-container tr:nth-child(odd) {
      background-color: white;
    }

    .candidatos-container tr:nth-child(even) {
      background-color: #aeaeae44;
    }

    .btnselecionar {
      width: unset !important;
    }

    .suggestions {
      list-style: none;
      padding: 0;
      margin: 0;
      background-color: white;
      border: 1px solid #ccc;
      max-height: 200px;
      overflow-y: auto;
      width: 95%;
      z-index: 1000;
      cursor: pointer;
    }

    .suggestions li {
      padding: 8px;
      cursor: pointer;
    }

    .suggestions li:hover {
      background-color: #f0f0f0;
    }
    .alinhamento-filtros select {
      width: 24%;
    }
    .idiomas {
      width: 97%;
    }

    .whatsapp-button {
      color: #25D366;
      text-decoration: none;
      padding: 8px 15px;
      border-radius: 5px;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      border: 1px solid #25D366;
      font-weight: 500;
    }

    .whatsapp-button:hover {
      background-color: #25D366;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 2px 5px rgba(37, 211, 102, 0.3);
    }

    .whatsapp-icon {
      width: 20px;
      height: 20px;
      object-fit: contain;
    }

    .btn-secondary {
      background-color: #6c757d;
      color: white;
      padding: 8px 16px;
      border-radius: 4px;
      text-decoration: none;
      border: none;
      cursor: pointer;
    }

    .btn-secondary:hover {
      background-color: #5a6268;
      color: white;
      text-decoration: none;
    }
  </style>
<style>
      .table-responsive {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch; /* Suporte para rolagem suave no mobile */
}

.table-responsive table {
  width: 100%;
  border-collapse: collapse;
}

  @media (max-width: 980px) {
    .content-main-login {
      padding: 23px;
    }
    .candidatos-container form button {
      width: 100%;
    }

  }


</style>
  <div class="main-login">
    <div class="content-main-login">
      <div class="candidatos-container">
        <h1>Candidatos para a vaga: <%= vaga.titulo %>
        </h1>

        <!-- Formulário de Filtros -->
        <div class="search-container">
          <form action="/empresa/vagas/<%= vagaId %>/candidatos" method="GET" class="search-form">
            <input type="text" name="busca" placeholder="Buscar candidatos..." value="<%= busca %>">
            <button type="submit" class="search-button">Buscar</button>
            <a href="/empresa/vagas" class="btn btn-secondary" style="margin-left: 10px;">Voltar</a>
          </form>
        </div>

        <% if (candidaturas.length> 0) { %>
         <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Telefone</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% candidaturas.forEach(candidatura=> { %>
                <tr>
                  <td>
                    <%= candidatura.candidato.nomeCompleto %>
                  </td>
                  <td>
                    <%= candidatura.candidato.email %>
                  </td>
                  <td>
                    <a href="https://wa.me/55<%= candidatura.candidato.telefone.replace(/\D/g, '') %>" 
                       target="_blank" 
                       class="whatsapp-button">
                      <img src="/img/whatsapp.png" alt="WhatsApp" class="whatsapp-icon">
                      <%= candidatura.candidato.telefone %>
                    </a>
                  </td>
                  <td>
                    <a href="/empresa/candidatos/<%= candidatura.candidato.id %>">Ver mais</a>
                  </td>
                  <td>
                    <% if (candidatura.selecionado) { %>
                      <span class="badge badge-success">Selecionado</span>
                    <% } else { %>
                      <form action="/empresa/vagas/<%= vagaId %>/candidatos/<%= candidatura.candidato.id %>/selecionar"
                            method="POST">
                        <button type="submit" class="btn btn-success btnselecionar">Selecionar</button>
                      </form>
                    <% } %>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
         </div>

          <nav>
            <ul class="pagination">
              <% for (let i=1; i <=totalPages; i++) { %>
                <li class="<%= i === currentPage ? 'active' : '' %>">
                  <a href="/empresa/vagas/<%= vagaId %>/candidatos?page=<%= i %>&busca=<%= busca %>">
                    <%= i %>
                  </a>
                </li>
                <% } %>
            </ul>
          </nav>
          <% } else { %>
            <p>Nenhum candidato encontrado para esta vaga.</p>
            <% } %>
      </div>
    </div>
  </div>
  <script src="/js/autocompletebuscacandidato.js"></script>

  <%- include('../partials/footer') %>