<%- include('../partials/header') %>
<style>
  .message {
    color: white;
    margin-bottom: 15px;
  }
  .forgot-password {
    text-align: center;
  }
  .forgot-password a {
    color: white;
    text-decoration: none;
    font-size: 14px;
  }
  .forgot-password a:hover {
    text-decoration: underline;
  }
  .forgot-password {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    flex-wrap: wrap;
    padding-top: 20px;
  }
  .forgot-password a {
    color: white;
    font-size: 16px;
    text-decoration: none;
  }
  .main-login2 {
    background-color: #0D0D0D;
    display: flex;
  }
  .mainlogin-col1, .mainlogin-col2 {
    width: 50%;
  }
  .mainlogin-col2 img {
    height: max-content;
    width: max-content;
    object-fit: cover;
  }
  .mainlogin-col1 {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .content-main-login2 {
    max-width: 360px;
  }
  .mainlogin-col1 form {
    display: flex;
    flex-direction: column;
  }
  .campodelogin input {
    width: 100%;
  }
  .content-main-login2 h1 {
    color: white;
    font-size: 36px;
    margin-bottom: 12px;
  }
  .content-main-login2 {
    font-size: 16px;
    color: white;
    margin-bottom: 36px;
  }
  .campodelogin p {
    color: white;
    font-size: 14px;
    margin-bottom: 7px;
  }
  @media (max-width: 980px) {
    .forgot-password {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>
<div class="main-login2">
  <div class="mainlogin-col1">
    <div class="content-main-login2">
      <h1>Login</h1>
      <p>Bem-vindo de volta! Preencha seus dados.</p>
      <div>
        <% if (message) { %>
          <p class="message"><%= message %></p>
        <% } %>
      </div>
      
      <form action="/auth/login_empresa" method="POST">
        <div class="campodelogin">
          <p>E-mail</p>
          <input type="email" name="email" placeholder="E-mail" required>
        </div>
        <div class="campodelogin">
          <p>Senha</p>
          <input type="password" name="senha" placeholder="Senha" required>
        </div>
        <a href="/auth/forgot-password-empresa">Esqueci minha senha</a>
        <button type="submit">Entrar</button>
      </form>
      <div class="forgot-password2">
        
        <a href="/auth/register_empresa">NÃ£o tem conta ainda? <span>Cadastre-se</span></a>
      </div>
    </div>
  </div>
  <div class="mainlogin-col2">
    <img src="/img/login-empresa.png" alt="Login Empresa">
  </div>
</div>

<%- include('../partials/footer') %>
