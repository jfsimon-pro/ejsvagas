 <%- include('../partials/header') %>
<style>
  .message {
    color: white;
    margin-bottom: 15px;
  }
  .forgot-password {
    text-align: center;
  }
  .forgot-password a {
    color: white;
    text-decoration: none;
    font-size: 14px;
  }
  .forgot-password a:hover {
    text-decoration: underline;
  }
  .forgot-password {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    flex-wrap: wrap;
    padding-top: 20px;
  }
  .forgot-password a {
    color: white;
    font-size: 16px;
    text-decoration: none;
  }
  .main-login2 {
    background-color: #0D0D0D;
    display: flex;
  }
  .mainlogin-col1, .mainlogin-col2 {
    width: 50%;
  }
  .mainlogin-col2 img {
    height: max-content;
    width: 100%;
    object-fit: cover;
  }
  .mainlogin-col1 {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .content-main-login2 {
    max-width: 360px;
  }
  .mainlogin-col1 form {
    display: flex;
    flex-direction: column;
  }
  .campodelogin input {
    width: 327px;
  }
  .content-main-login2 h1 {
    color: white;
    font-size: 36px;
    margin-bottom: 12px;
  }
  .content-main-login2 {
    font-size: 16px;
    color: white;
    margin-bottom: 36px;
  }
  .campodelogin p {
    color: white;
    font-size: 14px;
    margin-bottom: 7px;
  }
  .content-main-login2 p {
    margin-bottom: 7px;
  }
  .campodelogin input {
    padding: 7px;
    margin-bottom: 20px;
  }
  .bemvindo {
    margin-bottom: 37px !important;
  }
  form a {
    text-decoration: none;
    font-size: 14px;
    color: #FF5E01;
    margin-bottom: 15px;
  }
  .forgot-password2 {
    text-align: center;
  }
  .forgot-password2 a {
    text-decoration: none;
    font-size: 14px;
    color: white;
    margin-bottom: 15px;
  }
  form button {
    margin-bottom: 35px;
    color: white;
    background: #FF5E01;
    border: none;
    font-size: 16px;
    padding: 10px;
    border-radius: 4px;
  }
  .forgot-password2 a span {
    color: #FF5E01;
  }
  @media (max-width: 980px) {
    .forgot-password {
      flex-direction: column;
      gap: 10px;
    }
    .main-login2 {
      flex-wrap: wrap;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-bottom: 20px;
      padding-top: 80px;
    }
    .mainlogin-col1, .mainlogin-col2 {
      width: 100%;
    }
    .mainlogin-col2 {
      display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 30px;
    }
    .mainlogin-col2 img {
      max-width: 90%;
    }
  }
</style>
<div class="main-login2">
  <div class="mainlogin-col1">
    <div class="content-main-login2">
      <h1>Login</h1>
      <p class="bemvindo">Bem-vindo de volta! Preencha seus dados.</p>
      <div>
        <% if (message) { %>
          <p class="message"><%= message %></p>
        <% } %>
      </div>
      
      <form action="/auth/register_candidato" method="POST">
        <div class="campodelogin">
          <input type="text" name="nomeCompleto" placeholder="Nome Completo" required>
          <input type="text" name="cpf" placeholder="CPF" required>
        </div> 
        <div class="campodelogin">
          <input type="text" name="telefone" placeholder="Telefone" required>
        </div> 
        <div class="campodelogin">
          <input type="email" name="email" placeholder="E-mail" required>
        </div> 
        <div class="campodelogin">
          <input type="password" name="senha" placeholder="Senha" required>
        </div> 
        <div class="campodelogin">
          <input type="text" id="cep" name="cep" maxlength="8" placeholder="CEP" required>
        </div> 
        <div class="campodelogin">
          <input type="text" id="logradouro" name="logradouro" placeholder="Logradouro" required readonly>
        </div> 
        <div class="campodelogin">
          <input type="text" name="complemento" placeholder="Complemento" required>
        </div> 
        <div class="campodelogin">
          <input type="text" name="numero" placeholder="NÃºmero" required>
        </div> 
        <div class="campodelogin">
          <input type="text" id="bairro" name="bairro" placeholder="Bairro" required readonly>
        </div> 
        <div class="campodelogin">
          <input type="text" id="cidade" name="cidade" placeholder="Cidade" required readonly>
          <input type="text" id="uf" name="uf" maxlength="2" placeholder="UF" required readonly>
        </div> 

        <button type="submit">Cadastrar</button>
      </form>
    </div>
  </div>
  <div class="mainlogin-col2">
    <img src="/img/login-candidato.png" alt="Login Candidato">
  </div>
</div>
<script src="/js/cep.js"></script>
<%- include('../partials/footer') %>
